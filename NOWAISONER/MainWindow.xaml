<Window x:Class="NOWAISONER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NOWAISONER"
        mc:Ignorable="d"
        Title="MainWindow" Height="506.245" Width="541.285">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF938888" Offset="0.699"/>
                <GradientStop Color="White" Offset="0.125"/>
                <GradientStop Color="#FF615555" Offset="0.948"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas Margin="19,-5,1039,659">
            <Label Content="Spatial " HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="94" FontSize="20" FontFamily="MS Gothic" FontStyle="Italic" RenderTransformOrigin="0.606,0.947" Canvas.Top="12" Canvas.Left="290">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.787"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-4.258"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Content="Prisoner&#xA;" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="91" FontSize="20" FontFamily="MS Gothic" FontStyle="Italic" Foreground="Black" Canvas.Left="302" Canvas.Top="28" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="-0.341"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-0.493"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Content="DILEMMA" HorizontalAlignment="Left" Height="37" VerticalAlignment="Top" Width="102" FontSize="24" FontFamily="MS Gothic" Foreground="#FFD82424" Canvas.Top="48" Canvas.Left="289" RenderTransformOrigin="0.794,0.603" FontWeight="Bold" FontStyle="Italic">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.475"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0.67"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <TextBox x:Name="latticesize" Height="25" Canvas.Left="24" TextWrapping="Wrap" Text="5&#xA;" Canvas.Top="126" Width="137" FontSize="16" TextChanged="latticesize_TextChanged" MaxLines="1" FontFamily="Yu Gothic"/>
            <TextBox x:Name="perctxt" Text="" Height="23" Canvas.Left="400" TextWrapping="Wrap" Canvas.Top="169" Width="56" FontSize="16" TextChanged="txtslider2_TextChanged" RenderTransformOrigin="-19.758,-6.16" MaxLines="1" FontFamily="Yu Gothic">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.079"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Label Content="NOWAISONER" HorizontalAlignment="Left" Height="54" VerticalAlignment="Top" Width="198" FontSize="36" FontFamily="MS Gothic" RenderTransformOrigin="0.606,0.947" Canvas.Top="26" Canvas.Left="104" FontWeight="Bold">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.226"/>
                        <RotateTransform/>
                        <TranslateTransform Y="-5.458"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <TextBox x:Name="iteration" Height="25" Canvas.Left="24" TextWrapping="Wrap" Text="10&#xA;" Canvas.Top="268" Width="138" FontSize="16" MaxLines="1" TextChanged="iteration_TextChanged" FontFamily="Yu Gothic"/>

        </Canvas>
        <Label x:Name="neighbourlabel" Content="Neighbours" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic Medium" Margin="53,153,0,0" Height="37" FontSize="20" Width="120"/>
        <ComboBox x:Name="neighbourbox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="137" Height="25" Margin="43,190,0,0" FontSize="16" SelectionChanged="neighbourbox_SelectionChanged" FontFamily="Yu Gothic">
            <ListBoxItem Content="Von Neumann" IsSelected="True"/>
            <ListBoxItem Content="Moore"/>
        </ComboBox>
        <Label x:Name="neighbourlabel1" Content="Lattice Size" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic Medium" Margin="53,84,0,0" Height="37" Width="120" FontSize="20" RenderTransformOrigin="0.95,0.541"/>
        <Label x:Name="defectorsperc_" Content="Defectors" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic Medium" Margin="331,84,0,0" Height="37" FontSize="20" Width="102"/>
        <Button Content="Start " HorizontalAlignment="Left" Margin="10,405,0,0" VerticalAlignment="Top" Width="513" Height="60" Click="Button_Click" FontSize="24" FontWeight="Bold" Background="#FF383838" Foreground="White" BorderBrush="Black" RenderTransformOrigin="0.499,1.417"/>
        <Label x:Name="neighbourlabel_Copy" Content="Iterations" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic Medium" Margin="53,225,0,0" Height="37" FontSize="20" Width="120"/>
        <WrapPanel Margin="274,126,10,316" Orientation="Horizontal">
            <RadioButton Content="Clickable" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="101" FontSize="16" FontFamily="Yu Gothic" Checked="RadioButton_Checked_1"/>
            <RadioButton Content="By Percentage" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="137" FontSize="16" FontFamily="Yu Gothic" Checked="RadioButton_Checked" RenderTransformOrigin="0.742,0.667"/>
        </WrapPanel>
        <Label x:Name="n" Content="N." HorizontalAlignment="Left" Margin="476,190,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,1.269" Height="23"/>
        <WrapPanel Margin="305,274,78,134" Orientation="Vertical">


            <RadioButton x:Name="asyn" Content="Asynchronous" HorizontalAlignment="Left" VerticalAlignment="Top" Height="33" Width="140" FontSize="16" FontFamily="Yu Gothic" Checked="asyn_Checked"/>
            <RadioButton x:Name="sync" Content="Synchronous" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="128" FontSize="16" FontFamily="Yu Gothic" Checked="sync_Checked"/>
        </WrapPanel>
        <ComboBox x:Name="boundaries" HorizontalAlignment="Left" VerticalAlignment="Top" Width="137" Height="25" Margin="43,328,0,0" FontSize="16" FontFamily="Yu Gothic" SelectionChanged="boundaries_SelectionChanged">
            <ListBoxItem Content="Fixed "/>
            <ListBoxItem Content="Taurus"/>
        </ComboBox>
        <Label x:Name="neighbourlabel_Copy2" Content="Boundaries" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Yu Gothic Medium" Margin="53,291,0,0" Height="37" FontSize="20" Width="120"/>
        <Label x:Name="n_Copy" Content="%" HorizontalAlignment="Left" Margin="476,164,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,1.269"/>
        <TextBox x:Name="numtxt" Text="" TextWrapping="Wrap" FontSize="16" RenderTransformOrigin="-19.758,-6.16" MaxLines="1" FontFamily="Yu Gothic" Margin="419,191,58,256">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.079"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <GroupBox Header="Updating" HorizontalAlignment="Left" Height="115" Margin="283,229,0,0" VerticalAlignment="Top" Width="202" FontFamily="Yu Gothic Medium" FontSize="20"/>

    </Grid>
</Window>
